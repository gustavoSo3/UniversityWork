{
    "Version":"2012-10-17",
    "Statement":[
       {
          "Sid":"RegisterListDescribeTaskDefinition",
          "Effect":"Allow",
          "Action":[
             "ecs:RegisterTaskDefinition",
             "ecs:ListTasks",
             "ecs:DescribeTasks"
          ],
          "Resource":"*"
       },
       {
         "Sid":"ECRPushAccess",
         "Effect":"Allow",
         "Action": [
            "ecr:CompleteLayerUpload",
            "ecr:GetAuthorizationToken",
            "ecr:UploadLayerPart",
            "ecr:InitiateLayerUpload",
            "ecr:BatchCheckLayerAvailability",
            "ecr:PutImage"
        ],
         "Resource":"*"
      },
       {
          "Sid":"PassRolesInTaskDefinition",
          "Effect":"Allow",
          "Action":[
             "iam:PassRole"
          ],
          "Resource":[
             "arn:aws:iam::662038513642:role/*"
          ]
       },
       {
          "Sid":"DeployService",
          "Effect":"Allow",
          "Action":[
             "ecs:UpdateService",
             "ecs:DescribeServices"
          ],
          "Resource":[
            "arn:aws:ecs:us-east-1:662038513642:service/tucasita-cluster/tucasita-app-service",
             "arn:aws:ecs:us-east-1:662038513642:task/tucasita-cluster/*"
          ]
       },
       {
         "Sid":"EC2DescribeNetworkInterfaces",
         "Effect":"Allow",
         "Action":[
            "ec2:DescribeNetworkInterfaces"
         ],
         "Resource":"*"
      }
    ]
 }